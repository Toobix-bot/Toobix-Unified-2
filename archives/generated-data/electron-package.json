{
  "name": "toobix-desktop",
  "version": "1.0.0",
  "description": "Toobix - Dein digitaler Gef√§hrte als Desktop-Anwendung",
  "main": "electron/main.js",
  "author": "Toobix",
  "license": "MIT",
  "scripts": {
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "electron:build-win": "electron-builder --win --x64",
    "electron:build-all": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.toobix.desktop",
    "productName": "Toobix",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "core/**/*",
      "scripts/**/*",
      "services/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "electron/assets/icon.ico",
      "artifactName": "Toobix-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Toobix"
    },
    "portable": {
      "artifactName": "Toobix-Portable-${version}.exe"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "electron/assets/icon.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
