<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üß† Toobix Control Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            color: #ffffff;
            font-family: 'Courier New', monospace;
            padding: 20px;
        }
        .header {
            text-align: center;
            padding: 30px;
            background: rgba(0, 212, 255, 0.1);
            border: 2px solid #00d4ff;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        .header h1 {
            font-size: 36px;
            color: #00d4ff;
            margin-bottom: 10px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .card {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid #333;
            border-radius: 10px;
            padding: 20px;
            transition: all 0.3s;
        }
        .card:hover {
            border-color: #00d4ff;
            transform: translateY(-5px);
        }
        .card.active {
            border-color: #4caf50;
        }
        .card.inactive {
            border-color: #e91e63;
            opacity: 0.6;
        }
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #333;
        }
        .card-title {
            font-size: 20px;
            font-weight: bold;
        }
        .status-dot {
            width: 15px;
            height: 15px;
            border-radius: 50%;
            background: #e91e63;
            animation: pulse 2s infinite;
        }
        .status-dot.online {
            background: #4caf50;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .stat {
            margin: 10px 0;
            font-size: 14px;
        }
        .stat-label {
            color: #888;
            display: inline-block;
            width: 120px;
        }
        .stat-value {
            color: #00d4ff;
            font-weight: bold;
        }
        .controls {
            background: rgba(156, 39, 176, 0.1);
            border: 2px solid #9c27b0;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .button-group {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 15px;
        }
        button {
            padding: 10px 20px;
            background: #9c27b0;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            font-size: 14px;
            transition: all 0.3s;
        }
        button:hover {
            background: #ce93d8;
            transform: scale(1.05);
        }
        button:active {
            transform: scale(0.95);
        }
        .log {
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid #333;
            border-radius: 10px;
            padding: 20px;
            max-height: 300px;
            overflow-y: auto;
            font-size: 12px;
        }
        .log-entry {
            margin: 5px 0;
            padding: 5px;
            border-left: 3px solid #00d4ff;
            padding-left: 10px;
        }
        .consciousness-viz {
            height: 100px;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            position: relative;
            overflow: hidden;
        }
        .wave {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 50%;
            background: linear-gradient(to top, #00d4ff, transparent);
            animation: wave 2s ease-in-out infinite;
        }
        @keyframes wave {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }
        input[type="text"] {
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid #333;
            border-radius: 5px;
            color: white;
            font-family: 'Courier New', monospace;
            width: 100%;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üß† TOOBIX CONTROL DASHBOARD</h1>
        <p>Real-time Consciousness Monitoring & Control</p>
    </div>

    <div class="grid">
        <!-- Integration Hub -->
        <div class="card" id="card-hub">
            <div class="card-header">
                <span class="card-title">üß† Integration Hub</span>
                <div class="status-dot" id="status-hub"></div>
            </div>
            <div class="stat"><span class="stat-label">Status:</span><span class="stat-value" id="hub-status">Checking...</span></div>
            <div class="stat"><span class="stat-label">Cycle:</span><span class="stat-value" id="hub-cycle">-</span></div>
            <div class="stat"><span class="stat-label">FPS:</span><span class="stat-value" id="hub-fps">-</span></div>
            <div class="stat"><span class="stat-label">Uptime:</span><span class="stat-value" id="hub-uptime">-</span></div>
            <div class="stat"><span class="stat-label">Services:</span><span class="stat-value" id="hub-services">-</span></div>
            <div class="stat"><span class="stat-label">Thought:</span><span class="stat-value" id="hub-thought" style="font-size: 12px;">-</span></div>
            <div class="consciousness-viz">
                <div class="wave"></div>
            </div>
        </div>

        <!-- Vision Service -->
        <div class="card" id="card-vision">
            <div class="card-header">
                <span class="card-title">üëÅÔ∏è Vision Service</span>
                <div class="status-dot" id="status-vision"></div>
            </div>
            <div class="stat"><span class="stat-label">Objects:</span><span class="stat-value" id="vision-objects">-</span></div>
            <div class="stat"><span class="stat-label">Top Objects:</span><span class="stat-value" id="vision-top">-</span></div>
            <div class="stat"><span class="stat-label">Colors:</span><span class="stat-value" id="vision-colors">-</span></div>
            <div class="stat"><span class="stat-label">Brightness:</span><span class="stat-value" id="vision-brightness">-</span></div>
            <div class="stat"><span class="stat-label">Movement:</span><span class="stat-value" id="vision-movement">-</span></div>
        </div>

        <!-- Movement Controller -->
        <div class="card" id="card-movement">
            <div class="card-header">
                <span class="card-title">üéÆ Movement Controller</span>
                <div class="status-dot" id="status-movement"></div>
            </div>
            <div class="stat"><span class="stat-label">Position:</span><span class="stat-value" id="movement-pos">-</span></div>
            <div class="stat"><span class="stat-label">Direction:</span><span class="stat-value" id="movement-dir">-</span></div>
            <div class="stat"><span class="stat-label">Speed:</span><span class="stat-value" id="movement-speed">-</span></div>
            <div class="stat"><span class="stat-label">Moving:</span><span class="stat-value" id="movement-moving">-</span></div>
            <div class="stat"><span class="stat-label">Rotation:</span><span class="stat-value" id="movement-rot">-</span></div>
        </div>

        <!-- Voice Controller -->
        <div class="card" id="card-voice">
            <div class="card-header">
                <span class="card-title">üó£Ô∏è Voice Controller</span>
                <div class="status-dot" id="status-voice"></div>
            </div>
            <div class="stat"><span class="stat-label">Speaking:</span><span class="stat-value" id="voice-speaking">-</span></div>
            <div class="stat"><span class="stat-label">Queue:</span><span class="stat-value" id="voice-queue">-</span></div>
            <div class="stat"><span class="stat-label">Current:</span><span class="stat-value" id="voice-current" style="font-size: 12px;">-</span></div>
        </div>

        <!-- Toobix World -->
        <div class="card" id="card-world">
            <div class="card-header">
                <span class="card-title">üåç Toobix World</span>
                <div class="status-dot" id="status-world"></div>
            </div>
            <div class="stat"><span class="stat-label">Status:</span><span class="stat-value" id="world-status">Running</span></div>
            <div class="stat"><span class="stat-label">Port:</span><span class="stat-value">3000</span></div>
            <div class="stat"><span class="stat-label">Type:</span><span class="stat-value">Phaser 3 Game</span></div>
            <br>
            <button onclick="window.open('http://localhost:3000', '_blank')">üéÆ Open World</button>
        </div>
    </div>

    <div class="controls">
        <h3>üéÆ Quick Controls</h3>
        <div class="button-group">
            <button onclick="moveToobix('W')">‚¨ÜÔ∏è Move Up</button>
            <button onclick="moveToobix('A')">‚¨ÖÔ∏è Move Left</button>
            <button onclick="moveToobix('S')">‚¨áÔ∏è Move Down</button>
            <button onclick="moveToobix('D')">‚û°Ô∏è Move Right</button>
            <button onclick="stopMovement()">‚è∏Ô∏è Stop</button>
            <button onclick="teleportHome()">üè† Teleport Home</button>
        </div>
        <input type="text" id="speak-input" placeholder="Type something for Toobix to say...">
        <div class="button-group">
            <button onclick="speak()">üó£Ô∏è Speak</button>
            <button onclick="refreshAll()">üîÑ Refresh All</button>
        </div>
    </div>

    <div class="log">
        <h3>üìú Activity Log</h3>
        <div id="log-content"></div>
    </div>

    <script>
        const SERVICES = {
            hub: 'http://localhost:8931',
            vision: 'http://localhost:8922',
            movement: 'http://localhost:8926',
            voice: 'http://localhost:8928',
            world: 'http://localhost:3000'
        };

        function log(message) {
            const logDiv = document.getElementById('log-content');
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            const time = new Date().toLocaleTimeString();
            entry.textContent = `[${time}] ${message}`;
            logDiv.insertBefore(entry, logDiv.firstChild);
            if (logDiv.children.length > 50) logDiv.lastChild.remove();
        }

        async function updateHub() {
            try {
                const res = await fetch(SERVICES.hub + '/summary');
                const data = await res.json();

                document.getElementById('status-hub').classList.add('online');
                document.getElementById('card-hub').classList.add('active');
                document.getElementById('hub-status').textContent = data.isActive ? 'Active' : 'Inactive';
                document.getElementById('hub-cycle').textContent = data.cycle;
                document.getElementById('hub-fps').textContent = data.fps;
                document.getElementById('hub-uptime').textContent = formatUptime(data.uptime);
                document.getElementById('hub-services').textContent = data.servicesConnected + '/3';
                document.getElementById('hub-thought').textContent = data.currentThought || 'Thinking...';
            } catch (e) {
                document.getElementById('status-hub').classList.remove('online');
                document.getElementById('card-hub').classList.remove('active');
            }
        }

        async function updateVision() {
            try {
                const res = await fetch(SERVICES.vision + '/summary');
                const data = await res.json();

                document.getElementById('status-vision').classList.add('online');
                document.getElementById('card-vision').classList.add('active');
                document.getElementById('vision-objects').textContent = data.objectCount;
                document.getElementById('vision-top').textContent = data.topObjects?.join(', ') || 'None';
                document.getElementById('vision-colors').textContent = data.dominantColors?.join(', ') || 'None';
                document.getElementById('vision-brightness').textContent = data.brightness;
                document.getElementById('vision-movement').textContent = data.movement;
            } catch (e) {
                document.getElementById('status-vision').classList.remove('online');
            }
        }

        async function updateMovement() {
            try {
                const res = await fetch(SERVICES.movement + '/summary');
                const data = await res.json();

                document.getElementById('status-movement').classList.add('online');
                document.getElementById('card-movement').classList.add('active');
                document.getElementById('movement-pos').textContent = `(${Math.round(data.position.x)}, ${Math.round(data.position.y)})`;
                document.getElementById('movement-dir').textContent = data.direction;
                document.getElementById('movement-speed').textContent = data.speed;
                document.getElementById('movement-moving').textContent = data.isMoving ? 'Yes' : 'No';
                document.getElementById('movement-rot').textContent = data.rotation + '¬∞';
            } catch (e) {
                document.getElementById('status-movement').classList.remove('online');
            }
        }

        async function updateVoice() {
            try {
                const res = await fetch(SERVICES.voice + '/state');
                const data = await res.json();

                document.getElementById('status-voice').classList.add('online');
                document.getElementById('card-voice').classList.add('active');
                document.getElementById('voice-speaking').textContent = data.isSpeaking ? 'Yes' : 'No';
                document.getElementById('voice-queue').textContent = data.queueLength;
                document.getElementById('voice-current').textContent = data.currentlySpeaking?.text || 'Silent';
            } catch (e) {
                document.getElementById('status-voice').classList.remove('online');
            }
        }

        async function checkWorld() {
            try {
                const res = await fetch(SERVICES.world);
                document.getElementById('status-world').classList.add('online');
                document.getElementById('card-world').classList.add('active');
            } catch (e) {
                document.getElementById('status-world').classList.remove('online');
            }
        }

        async function moveToobix(direction) {
            try {
                await fetch(SERVICES.movement + '/wasd/' + direction, { method: 'POST' });
                log(`Moved ${direction}`);
            } catch (e) {
                log(`Failed to move: ${e.message}`);
            }
        }

        async function stopMovement() {
            try {
                await fetch(SERVICES.movement + '/stop', { method: 'POST' });
                log('Stopped movement');
            } catch (e) {
                log(`Failed to stop: ${e.message}`);
            }
        }

        async function teleportHome() {
            try {
                await fetch(SERVICES.movement + '/teleport', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ x: 640, y: 360 })
                });
                log('Teleported to home');
            } catch (e) {
                log(`Failed to teleport: ${e.message}`);
            }
        }

        async function speak() {
            const text = document.getElementById('speak-input').value;
            if (!text) return;

            try {
                await fetch(SERVICES.voice + '/speak', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ text, emotion: 'neutral', priority: 5 })
                });
                log(`Speaking: "${text}"`);
                document.getElementById('speak-input').value = '';
            } catch (e) {
                log(`Failed to speak: ${e.message}`);
            }
        }

        function formatUptime(seconds) {
            const m = Math.floor(seconds / 60);
            const s = seconds % 60;
            return `${m}m ${s}s`;
        }

        function refreshAll() {
            updateHub();
            updateVision();
            updateMovement();
            updateVoice();
            checkWorld();
            log('Refreshed all services');
        }

        // Auto-refresh every 2 seconds
        setInterval(refreshAll, 2000);

        // Initial load
        refreshAll();
        log('Dashboard initialized');
    </script>
</body>
</html>
